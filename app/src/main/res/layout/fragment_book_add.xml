<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnr_fbe_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/core_white"
    android:orientation="vertical"
    tools:context="com.example.vietnguyen.controllers.BookListFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/fbe_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chiase_gray"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_fba_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:src="@drawable/nav_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're doing well"
            android:textColor="@color/core_white"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/txt_fba_done"
            android:textColor="@color/core_white"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right" />

    </LinearLayout>

    <include layout="@layout/share_book_edit" />
</LinearLayout>
