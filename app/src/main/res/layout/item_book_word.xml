<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/core_selectable"
    android:id="@+id/lnr_ibw"
    android:paddingTop="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_ibw_fold"
            android:src="@drawable/ic_expand_less_black_18dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/txt_item_book_word_edit_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mock_book_name"
            android:textColor="@color/core_black"
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_item_book_word_speaker"
            android:src="@drawable/ic_volume_mute_black_18dp"
            android:paddingLeft="30dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:id="@+id/lnr_ibw_phrases"
        android:visibility="gone"
        android:background="@drawable/core_selectable"></LinearLayout>

    <View style="@style/core_line_divider"
        android:layout_marginTop="6dp" />

</LinearLayout>
