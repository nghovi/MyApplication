<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|left"
              android:background="@color/bg_dialog"
              android:orientation="vertical"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_with_2edt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/core_blue"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_with_2edt_next_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/dialog_width_2edt_next_word"
        android:textColor="@color/core_blue"/>

    <EditText
        android:id="@+id/edt_dialog_with_2edt_word"
        style="@style/core_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="@string/dialog_width_2edt_word_hint"
        android:minLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_width_2edt_next_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_width_2edt_next_phrase"
            android:textColor="@color/core_blue"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_dialog_with_2edt_phrase"
        style="@style/core_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:hint="@string/dialog_width_2edt_phrase_hint"
        android:inputType="textMultiLine"
        android:minLines="2"/>

    <Button
        android:id="@+id/btn_dialog_with_2edt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/done"
        android:textColor="@color/core_blue"/>

</LinearLayout>
