<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/core_white"
              android:orientation="vertical"
              tools:context="com.nguyenhoangviet.vpcorp.controllers.Book.BookListFragment">

    <!-- TODO: Update blank fragment layout -->

    <include layout="@layout/vnote_header"/>
    <include layout="@layout/core_banner_ad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lst_fragment_book_search_result_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_reading"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/txt_fragment_book_list_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_reading"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/fragment_book_list_empty"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
