                        <!--android:text="Date: "-->
                        <!--android:id="@+id/textView6" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Any"-->
                        <!--android:id="@+id/txt_fragment_task_search_date"-->
