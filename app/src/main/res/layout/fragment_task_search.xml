                        <!--android:layout_alignParentEnd="false"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:textIsSelectable="true" />-->
                <!--</LinearLayout>-->
                <!--<View style="@style/core_line_divider"/>-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
