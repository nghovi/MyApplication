<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vietnguyen.controllers.BookListFragment"
    android:background="@color/core_white">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/chiase_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:src="@drawable/nav_btn_back"
            android:layout_marginRight="10dp"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_icon_delete"
            android:layout_gravity="center"
            android:src="@drawable/nav_btn_delete"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_icon_done"
            android:src="@drawable/nav_btn_check"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/txt_edit"
            android:textColor="@color/core_white"
            android:layout_marginRight="10dp" />

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:id="@+id/txt_date"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority: "
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/txt_priority" />

        </LinearLayout>

        <com.example.vietnguyen.core.views.widgets.CoreTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            custom:jsonKey="name"
            android:layout_marginBottom="10dp"
            android:id="@+id/txt_name" />

        <com.example.vietnguyen.core.views.widgets.CoreTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            custom:jsonKey="description"
            android:layout_marginBottom="10dp"
            android:id="@+id/txt_description" />

        <com.example.vietnguyen.core.views.widgets.CoreTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            custom:jsonKey="comment"
            android:id="@+id/txt_comment"
            android:layout_marginBottom="@dimen/margin_10dp" />


    </LinearLayout>

</LinearLayout>
