<LinearLayout android:id="@+id/lnr_sbe_main_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.nguyenhoangviet.vpcorp.controllers.Book.BookListFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sbe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sbe_part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_sbe_image"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@drawable/book_cover"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lnr_sbe_name_selectable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/core_selectable"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_sbe_name_fold_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_expand_less_black_18dp"/>

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_sbe_name"
                                style="@style/core_edit_text"
                                android:hint="Enter book name"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_sbe_author_selectable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/core_selectable"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_sbe_author_fold_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_expand_less_black_18dp"/>

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Author"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_sbe_author"
                                style="@style/core_edit_text"
                                android:hint="Enter author name"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View android:layout_width="match_parent"
                      android:layout_height="6dp"
                      android:background="@color/core_tan"
                      android:paddingBottom="6dp"/>

                <LinearLayout
                    android:id="@+id/lnr_sbe_icon_url_selectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_selectable"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sbe_icon_url_fold_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_expand_less_black_18dp"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_book_edit_cover_image"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_sbe_icon_url"
                        style="@style/core_edit_text"
                        android:hint="@string/share_book_edit_cover_link"
                        android:visibility="gone"/>
                </LinearLayout>

                <View style="@style/core_line_divider"/>

                <LinearLayout
                    android:id="@+id/lnr_sbe_mood_selectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_selectable"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sbe_mood_fold_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_expand_less_black_18dp"/>

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/share_book_edit_book_msg"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_sbe_mood"
                        style="@style/core_edit_text"
                        android:hint="@string/share_book_edit_motto_hint"
                        android:visibility="gone"/>
                </LinearLayout>

                <View style="@style/core_line_divider"/>

                <LinearLayout
                    android:id="@+id/lnr_sbe_link_selectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_selectable"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sbe_link_fold_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_expand_less_black_18dp"/>

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Link"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_sbe_link"
                        style="@style/core_edit_text"
                        android:hint="Enter book link"
                        android:visibility="gone"/>
                </LinearLayout>

                <View style="@style/core_line_divider"/>

                <LinearLayout
                    android:id="@+id/lnr_sbe_comment_selectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_selectable"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sbe_fold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_expand_less_black_18dp"/>

                        <TextView
                            android:id="@+id/Comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_sbe_comment"
                        style="@style/core_edit_text"
                        android:hint="Enter your own comment"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="6dp"
                  android:background="@color/core_tan"
                  android:paddingBottom="6dp"/>

            <LinearLayout
                android:id="@+id/sbe_part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Vocabulary:"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/ico_sbe_add_vocabulary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="6dp"
                        android:src="@drawable/ico_add_16"/>
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnr_sbe_vocabulary_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
