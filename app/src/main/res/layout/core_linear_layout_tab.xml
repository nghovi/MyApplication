<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chiase_white"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lnr_statusTab"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_common_bienban_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="New Text"
            android:textColor="@color/core_gray"/>

        <TextView
            android:id="@+id/txt_lineTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_6dp"
            android:background="@color/core_blue"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>
