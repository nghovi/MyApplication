<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="core_line_divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="core_line_divider_with_margin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="core_edit_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/core_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TopDown Dialog -->
    <style name="dialog_animation_top_down">
        <item name="android:windowEnterAnimation">@layout/core_slide_top_down_dialog</item>
        <item name="android:windowExitAnimation">@layout/core_slide_up_top_dialog</item>
    </style>

    <style name="dialog_slide_anim_top_down" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/dialog_animation_top_down</item>
    </style>


    <style name="cs_common_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="cs_common_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cs_common_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
