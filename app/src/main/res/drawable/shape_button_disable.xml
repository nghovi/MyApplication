<?xml version="1.0" encoding="utf-8"?>
<shape
    style="@style/cs_common_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid android:color="@color/core_slate_gray"></solid>

    <!-- view border color and width -->
    <stroke
        android:width="@dimen/margin_1dp"
        android:color="@color/core_slate_gray"></stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="@dimen/margin_4dp"
        android:top="@dimen/margin_4dp"
        android:right="@dimen/margin_4dp"
        android:bottom="@dimen/margin_4dp"></padding>

    <!-- Here is the corner radius -->
    <!--<corners android:radius="@dimen/margin_10dp"></corners>-->

</shape>